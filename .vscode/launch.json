        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ConvertBitDepth/Debug/convbitdepth.exe",
            "args": ["--24", "Speaks.wav", "Speaks24.wav"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/ConvertBitDepth/Debug/",
            "environment": [],
            "console": "integratedTerminal"
